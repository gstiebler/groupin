{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src"
  }
}
