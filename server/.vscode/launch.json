  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "./node_modules/mocha/bin/mocha",
        "src/tests/**/*.spec.js",
        "--colors",
        "--reporter",
        "spec"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "WINSTON_CONSOLE_LEVEL": "debug",
        "NODE_ENV": "test",
        "MONGODB_DB_NAME": "groupin_test"
      }
    },
  ]
}