{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-underscore-dangle": 0,
        "object-curly-newline": 0,
        "no-restricted-syntax": 0,
        "no-plusplus": 0,
        "max-len": ["error", { "code": 120 }]
    }
}