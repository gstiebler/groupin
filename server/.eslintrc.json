{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint"
    ],  
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".ts"]
          }
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": 0,
        "object-curly-newline": 0,
        "no-restricted-syntax": 0,
        "no-plusplus": 0,
        "max-len": ["error", { "code": 120 }]
    }
}