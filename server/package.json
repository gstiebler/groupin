{
  "name": "groupinserver",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --declaration",
    "lint": "tslint --project tsconfig.json",
    "prepublish": "npm run compile",
    "test": "tsc && jest",
    "build": "tsc && npm run copy",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "copy": "cp firebase_android_config.json dist && cp src/schema.gql dist/src"
  },
  "nyc": {
    "all": true,
    "include": [
      "server/src/**/*.js",
      "mobile/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": ".coverage"
  },
  "dependencies": {
    "@types/lodash": "^4.14.165",
    "@types/mongoose": "^5.7.37",
    "axios": "^0.19.2",
    "bluebird": "^3.7.1",
    "firebase-admin": "^7.1.1",
    "graphql": "^15.3.0",
    "lodash": "^4.17.20",
    "md5": "^2.2.1",
    "moment": "^2.22.2",
    "mongoose": "^5.7.11",
    "shortid": "^2.2.15",
    "ts-jest": "^26.4.4",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "dotenv": "^6.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "nyc": "^14.1.1",
    "prettier": "^2.1.2",
    "serverless": "^1.79.0",
    "serverless-domain-manager": "^4.2.0",
    "serverless-offline": "^6.5.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "engines": {
    "node": "12.14",
    "npm": "6.13.1"
  }
